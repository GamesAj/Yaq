<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1abc9c"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.Antoniolage.yetanotherquiz.GameActivity" >
    <Button
        android:id="@+id/resp1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/resp2"
        android:layout_alignLeft="@+id/resp2"
        android:layout_marginBottom="34dp"
        android:background="#2ecc71"
        android:minHeight="40dp"
        android:onClick="IsCorrect"
        android:text=""
        android:textColor="#000000" />
   
    <Button
        android:id="@+id/resp2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/resp3"
        android:layout_alignLeft="@+id/resp3"
        android:layout_marginBottom="30dp"
        android:background="#2ecc71"
        android:minHeight="40dp"
        android:onClick="IsCorrect"
        android:text=""
        android:textColor="#000000" />

     <Button
         android:id="@+id/resp3"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:layout_centerHorizontal="true"
         android:layout_marginBottom="116dp"
         android:background="#2ecc71"
         android:minHeight="40dp"
         android:onClick="IsCorrect"
         android:text="@string/botao3"
         android:textColor="#000000" />

     <TextView
         android:id="@+id/pergunta"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_above="@+id/resp1"
         android:layout_centerHorizontal="true"
         android:layout_marginBottom="100dp"
         android:text=""
         android:textColor="#FFFFFF"
         android:textSize="16sp"
         android:typeface="serif" />

     <TextView
         android:id="@+id/textView1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_above="@+id/pergunta"
         android:layout_centerHorizontal="true"
         android:layout_marginBottom="47dp"
         android:textColor="#ffffff"
         android:textSize="25sp"
         android:typeface="monospace" />

  

</RelativeLayout>